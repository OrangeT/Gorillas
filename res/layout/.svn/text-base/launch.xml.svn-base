<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="center">

    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
                  android:layout_marginBottom="10px">

        <TextView android:text="GORILLAS!" android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:textSize="45px" android:gravity="center" />

        <TableLayout android:layout_width="420px" android:layout_height="wrap_content" android:layout_marginTop="10px"
                     android:layout_gravity="center">
            <TableRow>
                <TextView android:text="Player 1 Name" android:layout_width="200px" android:layout_marginRight="10px"
                          android:layout_height="wrap_content" />
                <TextView android:text="AI Name" android:layout_width="200px" android:layout_marginLeft="10px"
                          android:layout_height="wrap_content" android:gravity="right" />
            </TableRow>

            <TableRow>
                <EditText android:id="@+id/Player1Name" android:layout_width="200px" android:layout_marginRight="10px"
                          android:layout_height="wrap_content" style="@style/introInput" />
                <EditText android:id="@+id/Player2Name" android:layout_width="200px" android:layout_marginLeft="10px"
                          android:layout_height="wrap_content" style="@style/introInput" />
            </TableRow>

        </TableLayout>

        <TextView android:text="Play To How Many Total Points?" android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:paddingTop="20px" android:paddingBottom="2px" android:gravity="center" />

        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:gravity="center">
            <Button android:id="@+id/RemoveRounds" android:text="&lt;" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" style="@style/introInput" />
            <TextView android:id="@+id/Rounds" android:textSize="25px" android:gravity="center"
                      android:text="3" android:layout_height="wrap_content" android:layout_width="100px" />
            <Button android:id="@+id/AddRounds" android:text="&gt;" android:layout_height="wrap_content"
                    android:layout_width="wrap_content" style="@style/introInput" />
        </LinearLayout>

        <Button android:id="@+id/Play" android:text="Play!" android:layout_width="300px" android:layout_height="wrap_content"
                android:layout_marginTop="30px" android:textSize="35px"
                android:gravity="center" android:layout_gravity="center_horizontal" style="@style/introInput" />

    </LinearLayout>
</LinearLayout>