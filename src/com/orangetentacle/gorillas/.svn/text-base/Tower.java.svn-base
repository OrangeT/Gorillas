package com.orangetentacle.gorillas;

import android.graphics.Color;
import android.graphics.Rect;

public class Tower
 {
     public Rect Shape;

     public int Width;
     public int Height;
     public int ColorIndex;

     public int[] getColor()
     {
         int[] returnColor = new int[2];
         switch (ColorIndex) {
             case 0:
                 returnColor[1] = Color.rgb(195, 32, 31);
                 returnColor[0] = Color.rgb(43, 31, 23);
                 break;
             case 1:
                 returnColor[0] = Color.rgb(34, 14, 14);
                 returnColor[1] = Color.rgb(128, 0, 128);
                 break;
             case 2:
                 returnColor[1] = Color.rgb(192, 78, 32);
                 returnColor[0] = Color.rgb(112, 47, 19);
                 break;
         }
         return returnColor;
     }
 }
